


﻿<div class="col-md-4">
    <div class="card card-info card-annoucement card-round">
        <div class="card-body text-center">
            <div class="card-opening">Hava Durumu</div>
            <div class="card-desc">
                @ViewBag.cityName

            </div>
            <div class="card-detail">
                <div class="temp-btn">@ViewBag.degree °C</div>
            </div>
            <div class="card-detail">
                <div class="temp-desc">-@ViewBag.status- </div>
            </div>
        </div>
    </div>

    <style>
        .temp-btn {
            font-size: 48px; /* Sıcaklık boyutu */
