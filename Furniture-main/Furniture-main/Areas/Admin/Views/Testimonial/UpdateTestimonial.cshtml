@model Testimonial
@{
    ViewData["Title"] = "Referans Güncelleme ";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="TestimonialId" />
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Yorum</label>
    <textarea type="text" asp-for="Comment" rows="5" class="form-control"></textarea>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>



