@model Testimonial
@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Yorum</label>
    <textarea type="" asp-for="Comment" rows="5" class="form-control"></textarea>   
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>

