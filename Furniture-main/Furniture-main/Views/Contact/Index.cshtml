@model List<ContactInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!doctype html>
<html lang="tr">

<head>
    <!-- Diğer meta ve CSS dosyaları -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body>

    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                        <h1>İletişim</h1>
                        <p class="mb-4">Müşteri memnuniyetini ön planda tutarak, size en iyi hizmeti sunmak için buradayız. Sorularınız, geri bildirimleriniz veya talepleriniz için bizimle iletişime geçmekten çekinmeyin. Size yardımcı olmaktan mutluluk duyarız.</p>
                        <p><a href="#" class="btn btn-secondary me-2">Bize Ulaşın</a><a href="#" class="btn btn-white-outline">Daha Fazla Bilgi</a></p>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="hero-img-wrap">
                        <img src="~/furni/images/couch.png" class="img-fluid" alt="Mobilya Resmi">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="untree_co-section">
        <div class="container">

            <div class="block">
                <div class="row justify-content-center">

                    <div class="col-md-8 col-lg-8 pb-4">

                        <div class="row mb-5">
                            <div class="col-lg-4">
                                <div class="service no-shadow align-items-center link horizontal d-flex active" data-aos="fade-left" data-aos-delay="0">
                                    <div class="service-icon color-1 mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                                        </svg>
                                    </div>
                                    <div class="service-contents">
                                        <p>@ViewBag.Adres</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="service no-shadow align-items-center link horizontal d-flex active" data-aos="fade-left" data-aos-delay="0">
                                    <div class="service-icon color-1 mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z" />
                                        </svg>
                                    </div>
                                    <div class="service-contents">
                                        <p>@ViewBag.Email</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="service no-shadow align-items-center link horizontal d-flex active" data-aos="fade-left" data-aos-delay="0">
                                    <div class="service-icon color-1 mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                        </svg>
                                    </div>
                                    <div class="service-contents">
                                        <p>@ViewBag.Phone</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form id="contactForm" method="post" asp-action="SendMessage">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="NameSurname">Ad Soyad</label>
                                        <input type="text" class="form-control" id="NameSurname" name="NameSurname" required>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="Email">E-posta Adresi</label>
                                        <input type="email" class="form-control" id="Email" name="Email" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-black" for="Subject">Konu</label>
                                <input type="text" class="form-control" id="Subject" name="Subject" required>
                            </div>

                            <div class="form-group mb-5">
                                <label class="text-black" for="MessageContent">Mesaj</label>
                                <textarea class="form-control" id="MessageContent" name="MessageContent" cols="30" rows="5" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary-hover-outline">Mesaj Gönder</button>
                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.querySelector('#contactForm');

            form.addEventListener('submit', function (event) {
                event.preventDefault();

                // Form verilerini AJAX ile gönderme
                var formData = new FormData(form);
                fetch(form.action, {
                    method: 'POST',
                    body: formData
                }).then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Başarı!', 'Mesajınız başarıyla gönderildi!', 'success').then(() => {
                                form.reset(); // Formu sıfırla
                            });
                        } else {
                            Swal.fire('Hata!', 'Mesajınız gönderilirken bir hata oluştu.', 'error');
                        }
                    }).catch(error => {
                        Swal.fire('Hata!', 'Mesajınız gönderilirken bir hata oluştu.', 'error');
                    });
            });
        });</script>
</body>

</html>